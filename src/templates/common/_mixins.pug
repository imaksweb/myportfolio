mixin socials(socials)
    ul.socials
        each item in socials
            li.socials__item
                a.socials__link(href=`${item.link}`)
                    svg.socials__link-img
                        use(xlink:href=`./assets/images/symbol/sprite.svg#${item.icon}`)

mixin menu(menu)
    ul.menu
        each item in menu
            li.menu__item
                a.menu__link(href=`${item.link}`) #{item.title}

mixin footer-menu(menu)
    ul.footer-menu
        each item in menu
            li.footer-menu__item
                a.footer-menu__link(href=`${item.link}`) #{item.title}

mixin hero(hero)
    each item in hero
        .hero__pic
            img.hero__pic-img(src=`${item.img}`, alt="")
        .hero__descr
            .hero__title #{item.title}
            .hero__subtitle #{item.subtitle}

mixin arrow-down(arrow)
    each item in arrow
        a.arrow-down(href=`${item.link}`)
            svg.arrow-down__ico
                use(xlink:href=`./assets/images/symbol/sprite.svg#${item.icon}`)

mixin skills(skills)
    ul.skills
        each item in skills
            li.skills__item
                .skills-row__title #{item.title}
                ul.skills-row__list
                    each items in item.list
                        li.skills-row__item #{items}

mixin contacts(contacts)
    .contacts
        .contacts__subtitle
            .title.subtitle Контакты
        ul.contacts__list
            each item in contacts
                li.contacts__item
                    a.contacts__link(href=`${item.link}${item.data}`)
                        svg.contacts__icon
                            use(xlink:href=`./assets/images/symbol/sprite.svg#${item.icon}`)
                        .contacts__data=`${item.data}`