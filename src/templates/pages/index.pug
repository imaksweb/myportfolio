extends ../_template

block variables
    - var title = 'Главная'

block content
    section.welcome
        .parallax#parallax
            - for (var i = 1; i <= 7; i++)
                .parallax__layer
                    img.parallax__img(src=`/assets/images/content/parallax/layer-${i}.png`)
            
        .welcome__authorisation
            .authorisation
                a.authorisation__link(href="#") Авторизоваться
        .welcome__hero
            .hero
                .hero__data.hero__data_bg-white
                    +hero-pic(hero)
                    +hero-descr(hero)
                    .hero__socials
                        +socials(socials)
                nav.hero__menu
                    +menu(menu)
        .welcome__copyright.copyright_white
            include ../common/_copyright

